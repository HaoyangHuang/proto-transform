{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "crx/**/*.jt",
        "crx/**/*.js",
        "index.js",
        "index.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}